   xmlns:tools="http://schemas.android.com/tools"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   android:gravity="center"
   android:orientation="vertical"
   tools:context=".MainActivity">


   <Button
      android:id="@+id/bt_observer_pattern"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Observer Pattern" />

   <Button
      android:id="@+id/bt_scheduler_sample"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Scheduler Sample" />


   <Button
      android:id="@+id/bt_flow_control_sample"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Flow Control Operators Sample" />

   <Button
      android:id="@+id/bt_rxbinding_sample"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="RxBinding Sample" />
