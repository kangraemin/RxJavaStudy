<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".StreamExampleActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <Button
            android:id="@+id/bt_observable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Observable Just (trampoline)" />

        <Button
            android:id="@+id/bt_observable_interval"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Observable Interval (io)" />

        <Button
            android:id="@+id/bt_single"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Single (computation)" />

        <Button
            android:id="@+id/bt_flowable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Flowable (single)" />

        <Button
            android:id="@+id/bt_maybe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Maybe (io)" />

        <Button
            android:id="@+id/bt_completable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Completable (io)" />

        <TextView
            android:id="@+id/tv_show_log"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:background="@color/black"
            android:gravity="center"
            android:text="LOG TEXT"
            android:textColor="@color/white"
            android:textSize="20dp" />
    </LinearLayout>
</layout>